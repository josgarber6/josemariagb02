---
import BriefcaseIcon from '../components/icons/Briefcase.astro'
---

<span class="rotating-border hover:scale-105 transition">
  <div class="
  inline-flex items-center justify-center
  w-full px-3 py-1 rounded-full
  bg-red-100
  dark:bg-slate-50/100 text-slate-800/100 text-[17px]
  cursor-pointer
  whitespace-nowrap
  backdrop-blur-3xl">
    <BriefcaseIcon alt="maleta" class="flex flex-auto mr-2 size-4"/>
    <slot/>
  </div>
</span>

<style>
  .rotating-border {
    position: relative;
    display: inline-flex;
    overflow: hidden;
    align-items: center;
    padding: 2px;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
  }
  .rotating-border::before {
    content: '';
    position: absolute;
    inset: -100000%;
    /* top: -500px;
    left: -100px;
    right: -100px;
    bottom: -500px; */
    border-radius: 9999px;
    background: conic-gradient(from 90deg at 50%50%,#c20e08, #971616, #ee3c3c); /* Blanco mayor resalte: e4ebe8, Gris: aaa3a3 */
    animation: spin 4s linear infinite;
    z-index: -1;
  }
</style>