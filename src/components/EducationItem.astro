---
interface Props {
  title: string;
  place: string;
  date: string;
  img?: string;
}

const { title, place, date, img } = Astro.props;
---

<div class="flex flex-row justify-end items-start w-full">
  {img && (
    img.startsWith('http') ? (
      <img class="w-[400px] h-[auto] rounded-xl mr-4" src={img}/>
    ) : (
      <img class="w-[400px] h-[261px] rounded-xl mr-4" src={img}/>
    )
  )}
  <div class="flex flex-col justify-end items-end w-2/3">
    <div class="w-3 h-3 bg-red-700 rounded-full mt-2.5 border border-red-700 dark:border-gray-900 dark:bg-gray-700 ml-auto transform translate-x-[18px] translate-y-8"></div>
    <h3 class="text-2xl font-semibold text-red-700 max-w-60 text-end">
      <div class="flex flex-row justify-end items-end">
        {title}
      </div>
    </h3>
    <time class="mb-1 text-[16px] font-normal leading-none text-slate-800/90 dark:text-gray-500 max-w-60 text-pretty mt-2 text-end">{date}</time>
    <p class="mb-4 text-[18px] font-normal text-slate-800 dark:text-gray-400 pt-2 max-w-60 text-pretty text-end">
      {place}
    </p>
  </div>
</div>